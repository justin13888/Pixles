<style>
  .github-stars {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.8rem;
    border-radius: 9999px;
    background-color: var(--sl-color-gray-6);
    color: var(--sl-color-gray-1);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .github-stars:hover {
    background-color: var(--sl-color-gray-5);
  }

  .icon {
    height: 1.2rem;
    width: 1.2rem;
  }
</style>

<script>
  // Fetch star count from GitHub API
  const fetchStars = async () => {
    try {
      const response = await fetch('https://api.github.com/repos/pixles-app/pixles');
      const data = await response.json();
      
      const starElements = document.querySelectorAll('.star-count');
      starElements.forEach(el => {
        if (data.stargazers_count !== undefined) {
          el.textContent = data.stargazers_count.toLocaleString();
        } else {
          el.textContent = 'Star';
        }
      });
    } catch (error) {
      console.error('Error fetching GitHub stars:', error);
      const starElements = document.querySelectorAll('.star-count');
      starElements.forEach(el => {
        el.textContent = 'Star';
      });
    }
  };

  // Run when the DOM is loaded
  document.addEventListener('DOMContentLoaded', fetchStars);
</script> 
