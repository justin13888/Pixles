{
  "openapi": "3.0.3",
  "info": {
    "title": "Pixles API",
    "description": "Pixles API Documentation",
    "license": {
      "name": "GNU Affero General Public License v3.0 or later",
      "url": "https://www.gnu.org/licenses/agpl-3.0.html"
    },
    "version": "0.1.0"
  },
  "paths": {
    "/v1/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Login a user",
        "operationId": "login_user",
        "requestBody": {
          "description": "Extract json format data from request.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth.models.requests.LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success - login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth.models.responses.TokenResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Invalid credentials"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/logout": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Logout user and invalidate tokens",
        "operationId": "logout",
        "responses": {
          "200": {
            "description": "Logout successful"
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/password-reset": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Reset password with token",
        "operationId": "reset_password",
        "requestBody": {
          "description": "Extract json format data from request.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth.models.ResetPasswordPayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successful"
          },
          "400": {
            "description": "Invalid or expired token, or invalid new password"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/password-reset-request": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Request password reset",
        "operationId": "reset_password_request",
        "requestBody": {
          "description": "Extract json format data from request.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth.models.ResetPasswordRequestPayload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset email sent (if user exists)"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/profile": {
      "get": {
        "tags": [
          "auth"
        ],
        "summary": "Get user profile",
        "operationId": "get_user_profile",
        "responses": {
          "200": {
            "description": "Success - returns user profile",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth.models.UserProfile"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Update user profile",
        "operationId": "update_user_profile",
        "requestBody": {
          "description": "Extract json format data from request.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth.models.requests.UpdateProfileRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success - returns updated user profile",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth.models.UserProfile"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or password"
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/refresh": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Refresh an access token using a refresh token",
        "operationId": "refresh_token",
        "requestBody": {
          "description": "Extract json format data from request.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth.models.requests.RefreshTokenRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success - tokens refreshed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth.models.responses.TokenResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid or expired refresh token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/register": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Register a new user",
        "operationId": "register_user",
        "requestBody": {
          "description": "Extract json format data from request.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/auth.models.requests.RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success - user registered and tokens returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/auth.models.responses.TokenResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid registration data"
          },
          "409": {
            "description": "User already exists"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/validate": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Validate an access token",
        "operationId": "validate_token",
        "responses": {
          "200": {
            "description": "Token is valid - returns user ID"
          },
          "401": {
            "description": "Invalid or expired token"
          }
        }
      }
    },
    "/v1/version": {
      "get": {
        "tags": [
          "api"
        ],
        "summary": "Get API version info",
        "operationId": "get_version",
        "responses": {
          "200": {
            "description": "Response with json format data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/pixles_api.routes.version.VersionResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "auth.models.ResetPasswordPayload": {
        "type": "object",
        "required": [
          "token",
          "new_password"
        ],
        "properties": {
          "new_password": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        }
      },
      "auth.models.ResetPasswordRequestPayload": {
        "type": "object",
        "required": [
          "email"
        ],
        "properties": {
          "email": {
            "type": "string"
          }
        },
        "example": {
          "email": "johndoe@email.com"
        }
      },
      "auth.models.UserProfile": {
        "type": "object",
        "required": [
          "user_id",
          "username",
          "email",
          "created_at",
          "updated_at"
        ],
        "properties": {
          "created_at": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "auth.models.requests.LoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "example": {
          "email": "johndoe@email.com",
          "password": "password"
        }
      },
      "auth.models.requests.RefreshTokenRequest": {
        "type": "object",
        "required": [
          "refresh_token"
        ],
        "properties": {
          "refresh_token": {
            "type": "string"
          }
        }
      },
      "auth.models.requests.RegisterRequest": {
        "type": "object",
        "required": [
          "username",
          "name",
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "example": {
          "email": "johndoe@email.com",
          "name": "John Doe",
          "password": "password",
          "username": "johndoe"
        }
      },
      "auth.models.requests.UpdateProfileRequest": {
        "type": "object",
        "properties": {
          "current_password": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "new_password": {
            "type": "string",
            "nullable": true
          },
          "username": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "auth.models.responses.TokenResponse": {
        "type": "object",
        "required": [
          "access_token",
          "refresh_token",
          "token_type",
          "expires_by"
        ],
        "properties": {
          "access_token": {
            "type": "string"
          },
          "expires_by": {
            "type": "integer",
            "format": "uint64",
            "description": "Access token expiry in seconds",
            "minimum": 0
          },
          "refresh_token": {
            "type": "string"
          },
          "token_type": {
            "type": "string",
            "description": "E.g. \"Bearer\""
          }
        }
      },
      "pixles_api.routes.version.VersionResponse": {
        "type": "object",
        "required": [
          "name",
          "version"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Bearer token authentication"
      }
    }
  },
  "tags": [
    {
      "name": "api",
      "description": "Pixles API"
    },
    {
      "name": "auth",
      "description": "Pixles Authentication API"
    },
    {
      "name": "upload",
      "description": "Pixles Upload API"
    }
  ]
}