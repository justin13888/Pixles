{
  "openapi": "3.0.3",
  "info": {
    "title": "Pixles API",
    "description": "Pixles API Documentation",
    "license": {
      "name": "GNU Affero General Public License v3.0 or later"
    },
    "version": "0.1.0"
  },
  "paths": {
    "/v1/auth/profile": {
      "get": {
        "tags": [
          "auth"
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfile"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "tags": [
          "auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateProfileRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfile"
                }
              }
            }
          },
          "400": {
            "description": "Invalid password"
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/register": {
      "description": "Register a new user",
      "post": {
        "tags": [
          "auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid registration data"
          },
          "409": {
            "description": "User already exists"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ]
      }
    },
    "/v1/auth/login": {
      "description": "Login a user",
      "post": {
        "tags": [
          "auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/refresh": {
      "description": "Refresh an access token using a refresh token",
      "post": {
        "tags": [
          "auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshTokenRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid or expired refresh token"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/validate": {
      "description": "Validate an access token",
      "post": {
        "tags": [
          "auth"
        ],
        "responses": {
          "200": {
            "description": "Token is valid - returns user ID"
          },
          "401": {
            "description": "Invalid or expired token"
          }
        }
      }
    },
    "/v1/auth/logout": {
      "description": "Logout user and invalidate tokens",
      "post": {
        "tags": [
          "auth"
        ],
        "responses": {
          "200": {
            "description": "Logout successful"
          },
          "401": {
            "description": "Unauthorized - invalid or missing token"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "bearer": []
          }
        ]
      }
    },
    "/v1/auth/password-reset-request": {
      "description": "Request password reset",
      "post": {
        "tags": [
          "auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetPasswordRequestPayload"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Password reset email sent (if user exists)"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/auth/password-reset": {
      "description": "Reset password with token",
      "post": {
        "tags": [
          "auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResetPasswordPayload"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Password reset successful"
          },
          "400": {
            "description": "Invalid or expired token, or invalid new password"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v1/upload": {
      "description": "List or create todos",
      "get": {
        "tags": [
          "upload"
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "upload"
        ],
        "requestBody": {
          "description": "Item to do.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Todo"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Todo created successfully"
          },
          "409": {
            "description": "Todo already exists"
          }
        }
      }
    },
    "/v1/upload/search": {
      "description": "Search todos by query params",
      "get": {
        "tags": [
          "upload"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "done",
            "description": "Search by `done` status.",
            "required": true,
            "schema": {
              "description": "Search by `done` status.",
              "type": "boolean"
            },
            "style": "form"
          },
          {
            "in": "query",
            "name": "value",
            "description": "Search by value. Search is incase sensitive.",
            "required": true,
            "schema": {
              "description": "Search by value. Search is incase sensitive.",
              "type": "string"
            },
            "style": "form"
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Todo"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/upload/{id}": {
      "description": "Mark todo done or delete",
      "put": {
        "tags": [
          "upload"
        ],
        "responses": {
          "200": {
            "description": "Todo marked as done"
          },
          "401": {
            "description": "Unauthorized - invalid API key"
          },
          "404": {
            "description": "Todo not found"
          }
        }
      },
      "delete": {
        "tags": [
          "upload"
        ],
        "responses": {
          "200": {
            "description": "Todo deleted successfully"
          },
          "401": {
            "description": "Unauthorized - invalid or missing API key"
          },
          "404": {
            "description": "Todo not found"
          }
        }
      }
    },
    "/v1/version": {
      "description": "Get API version info",
      "get": {
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Bearer token authentication"
      }
    },
    "schemas": {
      "ApiKeyLocation": {
        "type": "string",
        "enum": [
          "query",
          "header",
          "cookie"
        ]
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ],
        "example": {
          "email": "johndoe@email.com",
          "password": "password"
        }
      },
      "RefreshTokenRequest": {
        "type": "object",
        "properties": {
          "refresh_token": {
            "type": "string"
          }
        },
        "required": [
          "refresh_token"
        ]
      },
      "RegisterRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "name",
          "email",
          "password"
        ],
        "example": {
          "email": "johndoe@email.com",
          "name": "John Doe",
          "password": "password",
          "username": "johndoe"
        }
      },
      "ResetPasswordPayload": {
        "type": "object",
        "properties": {
          "new_password": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        },
        "required": [
          "token",
          "new_password"
        ]
      },
      "ResetPasswordRequestPayload": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          }
        },
        "required": [
          "email"
        ],
        "example": {
          "email": "johndoe@email.com"
        }
      },
      "Todo": {
        "description": "Item to do.",
        "type": "object",
        "properties": {
          "done": {
            "type": "boolean"
          },
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "value": {
            "type": "string",
            "example": "Buy groceries"
          }
        },
        "required": [
          "id",
          "value",
          "done"
        ]
      },
      "TokenResponse": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "expires_by": {
            "description": "Access token expiry in seconds",
            "type": "integer",
            "format": "uint64",
            "minimum": 0
          },
          "refresh_token": {
            "type": "string"
          },
          "token_type": {
            "description": "E.g. \"Bearer\"",
            "type": "string"
          }
        },
        "required": [
          "access_token",
          "refresh_token",
          "token_type",
          "expires_by"
        ]
      },
      "UpdateProfileRequest": {
        "type": "object",
        "properties": {
          "current_password": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "new_password": {
            "type": "string",
            "nullable": true
          },
          "username": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "UserProfile": {
        "type": "object",
        "properties": {
          "created_at": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        },
        "required": [
          "user_id",
          "username",
          "email",
          "created_at",
          "updated_at"
        ]
      },
      "VersionResponse": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "version"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "api",
      "description": "Pixles API"
    },
    {
      "name": "auth",
      "description": "Pixles Authentication API"
    },
    {
      "name": "upload",
      "description": "Pixles Upload API"
    }
  ]
}